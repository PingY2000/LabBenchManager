@page "/assignments"

@using LabBenchManager.Services
@using LabBenchManager.Models
@inject AssignmentService AssignmentSvc

<PageTitle>申请管理</PageTitle>

<h3>申请管理 (Assignments)</h3>
<p class="text-muted">查看和处理所有测试台使用申请。</p>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>申请人</th>
            <th>项目名称</th>
            <th>申请设备</th>
            <th>申请时间</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (assignments == null)
        {
            <tr><td colspan="7"><em>正在从数据库加载申请列表...</em></td></tr>
        }
        else
        {
            @foreach (var request in assignments)
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.ApplicantName</td>
                    <td>@request.ProjectName</td>
                    <td>@request.Bench?.Name</td> @* 因为我们用了 Include, 这里可以安全地显示设备名 *@
                    <td>@request.RequestTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <span class="badge @GetRequestStatusBadge(request.Status)">@request.Status.ToString()</span>
                    </td>
                    <td>
                        @if (request.Status == AssignmentStatus.待审批)
                        {
                            <button class="btn btn-sm btn-success me-1" @onclick="() => HandleApproval(request, true)">批准</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => HandleApproval(request, false)">拒绝</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-secondary" disabled>已处理</button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


@code {
    private List<Assignment>? assignments;

    protected override async Task OnInitializedAsync()
    {
        await LoadAssignments();
    }

    private async Task LoadAssignments()
    {
        assignments = await AssignmentSvc.GetAllAsync();
    }

    private async Task HandleApproval(Assignment request, bool isApproved)
    {
        request.Status = isApproved ? AssignmentStatus.已批准 : AssignmentStatus.已拒绝;
        await AssignmentSvc.UpdateAsync(request);
        // 审批后无需重新加载整个列表，只需刷新当前UI即可
        StateHasChanged();
    }

    private string GetRequestStatusBadge(AssignmentStatus status) => status switch
    {
        AssignmentStatus.待审批 => "bg-warning text-dark",
        AssignmentStatus.已批准 => "bg-success",
        AssignmentStatus.已拒绝 => "bg-danger",
        AssignmentStatus.进行中 => "bg-primary",
        AssignmentStatus.已完成 => "bg-secondary",
        _ => "bg-dark"
    };
}