    private List<Assignment>? filteredAssignments => GetFilteredAssignments();

    private List<Assignment>? GetFilteredAssignments()
    {
        if (availableAssignmentsForReport == null)
            return null;

        var result = availableAssignmentsForReport.AsEnumerable();

        // 获取日期范围
        var (startDate, endDate) = GetDateRange();

        // 如果设置了日期筛选
        if (startDate.HasValue || endDate.HasValue)
        {
            result = result.Where(a =>
            {
                if (!a.TestPlanId.HasValue || a.TestPlan == null)
                    return false;

                var completedTime = GetTestPlanCompletedTime(a.TestPlan);
                if (!completedTime.HasValue)
                    return false;

                if (startDate.HasValue && completedTime.Value.Date < startDate.Value.Date)
                    return false;

                if (endDate.HasValue && completedTime.Value.Date > endDate.Value.Date)
                    return false;

                return true;
            });
        }

        return result.ToList();
    }

