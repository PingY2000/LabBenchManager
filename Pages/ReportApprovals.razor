            return cachedTime;

        return null;
    }


    // 将原来的日期变量替换为筛选选项
    private string dateFilterOption = "none";

    // 根据筛选选项计算日期范围
    private (DateTime? StartDate, DateTime? EndDate) GetDateRange()
    {
        var today = DateTime.Today;

        return dateFilterOption switch
        {
            "week" => (today.AddDays(-7), today),
            "month" => (today.AddMonths(-1), today),
            "year" => (today.AddYears(-1), today),
            _ => (null, null) // "none" 或其他情况
        };
    }

    
