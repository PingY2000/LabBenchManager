@page "/adminusers"
@*@attribute [Authorize(Roles = AppRoles.Admin)] *@

@using LabBenchManager.Models
@using LabBenchManager.Services
@inject UserService UserService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using ClosedXML.Excel;

<h3>用户权限管理</h3>
<p class="text-muted">为NT账号分配应用程序角色、姓名和部门。</p>

<!-- ==================== Excel 导入/导出区域 ==================== -->
<div class="card mb-4">
    <div class="card-header">
        <h5><span class="oi oi-spreadsheet me-2"></span>批量操作</h5>
    </div>
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <p class="mb-1">您可以导出当前用户列表为Excel模板，编辑后上传以批量更新用户信息。</p>
            <small class="text-muted">支持的操作：更新现有用户，或根据NT账号添加新用户。</small>
        </div>
        <div class="btn-group">
            <button class="btn btn-success" @onclick="ExportToExcel" disabled="@(users == null || !users.Any())">
                <span class="oi oi-data-transfer-download me-1"></span>导出为Excel
            </button>
            <button class="btn btn-info" onclick="document.getElementById('file-upload').click();">
                <span class="oi oi-data-transfer-upload me-1"></span>上传Excel更新
            </button>
            <InputFile id="file-upload" OnChange="ImportFromExcel" class="d-none" accept=".xlsx" />
        </div>
    </div>
    @if (!string.IsNullOrEmpty(importStatusMessage))
    {
        <div class="card-footer @(isImportError ? "bg-danger" : "bg-success") text-white">
            @importStatusMessage
        </div>
    }
</div>


<!-- ==================== 用户列表 ==================== -->
<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>NT账号</th>
            <th>显示名称</th>
            <th>部门</th>
            <th>角色</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (users == null)
        {
            <tr><td colspan="5"><em>加载中...</em></td></tr>
        }
        else
        {
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.NtAccount</td>
                    <td>
                        <InputText class="form-control form-control-sm" @bind-Value="user.DisplayName" @oninput="(e) => user.DisplayName = e.Value?.ToString()" @onblur="() => UpdateUser(user)" />
                    </td>
                    <td>
                        <InputText class="form-control form-control-sm" @bind-Value="user.Department" @oninput="(e) => user.Department = e.Value?.ToString()" @onblur="() => UpdateUser(user)" />
                    </td>
                    <td>
                        <InputSelect class="form-select form-select-sm" @bind-Value="user.Role" @bind-Value:after="() => UpdateUser(user)">
                            <option value="@AppRoles.Requester">@AppRoles.Requester</option>
                            <option value="@AppRoles.TestEngineer">@AppRoles.TestEngineer</option>
                            <option value="@AppRoles.Admin">@AppRoles.Admin</option>
                        </InputSelect>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user)">
                            <span class="oi oi-trash"></span>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<hr />

<!-- ==================== 添加新用户 ==================== -->
<h4>添加新用户</h4>
<EditForm Model="newUser" OnValidSubmit="AddNewUser" class="row g-3 align-items-end">
    <DataAnnotationsValidator />
    <div class="col-md-3">
        <label class="form-label">NT账号 (格式: DOMAIN\user)</label>
        <InputText class="form-control" @bind-Value="newUser.NtAccount" />
        <ValidationMessage For="() => newUser.NtAccount" />
    </div>
    <div class="col-md-3">
        <label class="form-label">显示名称</label>
        <InputText class="form-control" @bind-Value="newUser.DisplayName" />
    </div>
    <div class="col-md-3">
        <label class="form-label">部门</label>
        <InputText class="form-control" @bind-Value="newUser.Department" />
    </div>
    <div class="col-md-2">
        <label class="form-label">角色</label>
        <InputSelect class="form-select" @bind-Value="newUser.Role">
            <option value="">--选择角色--</option>
            <option value="@AppRoles.Requester">@AppRoles.Requester</option>
            <option value="@AppRoles.TestEngineer">@AppRoles.TestEngineer</option>
            <option value="@AppRoles.Admin">@AppRoles.Admin</option>
        </InputSelect>
        <ValidationMessage For="() => newUser.Role" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">添加</button>
    </div>
</EditForm>


@code {
    private List<ApplicationUser>? users;
    private ApplicationUser newUser = new() { Role = AppRoles.Requester }; // 默认角色

    // Excel 导入/导出状态
    private string? importStatusMessage;
    private bool isImportError = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        users = await UserService.GetAllUsersAsync();
    }

    private async Task AddNewUser()
    {
        await UserService.AddUserAsync(newUser);
        newUser = new() { Role = AppRoles.Requester }; // 重置表单
        await LoadUsers();
    }

    private async Task UpdateUser(ApplicationUser userToUpdate)
    {
        await UserService.UpdateUserAsync(userToUpdate);
    }

    private async Task DeleteUser(ApplicationUser User)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"确定要删除用户 '{User.NtAccount}' 吗？");

        // 2. 检查用户的选择
        if (confirmed)
        {
            await UserService.DeleteUserAsync(User.Id);
            await LoadUsers();
        }
        
    }

    private async Task ExportToExcel()
    {
        if (users == null || !users.Any()) return;

        using var workbook = new XLWorkbook();
        var worksheet = workbook.Worksheets.Add("Users");

        // 表头
        worksheet.Cell(1, 1).Value = "NtAccount";
        worksheet.Cell(1, 2).Value = "DisplayName";
        worksheet.Cell(1, 3).Value = "Department";
        worksheet.Cell(1, 4).Value = "Role";

        // 数据
        for (int i = 0; i < users.Count; i++)
        {
            worksheet.Cell(i + 2, 1).Value = users[i].NtAccount;
            worksheet.Cell(i + 2, 2).Value = users[i].DisplayName;
            worksheet.Cell(i + 2, 3).Value = users[i].Department;
            worksheet.Cell(i + 2, 4).Value = users[i].Role;
        }

        worksheet.Columns().AdjustToContents();

        using var ms = new MemoryStream();
        workbook.SaveAs(ms);
        var fileBytes = ms.ToArray();

        var fileName = $"Users_Export_{DateTime.Now:yyyyMMdd}.xlsx";
        await JSRuntime.InvokeVoidAsync("saveAsFile", fileName, Convert.ToBase64String(fileBytes));
    }

    private async Task ImportFromExcel(InputFileChangeEventArgs e)
    {
        isImportError = false;
        importStatusMessage = "正在处理文件...";

        try
        {
            var file = e.File;
            if (file == null)
            {
                throw new Exception("未选择文件。");
            }

            // 先将文件内容异步读入内存
            using var originalStream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            using var memoryStream = new MemoryStream();
            await originalStream.CopyToAsync(memoryStream); // 异步复制到内存
            memoryStream.Position = 0; // 重置位置

            // 现在用支持同步读取的 MemoryStream 创建 workbook
            using var workbook = new XLWorkbook(memoryStream);

            var worksheet = workbook.Worksheet(1);
            if (worksheet == null)
            {
                throw new Exception("Excel 文件中找不到工作表。");
            }

            var lastRow = worksheet.LastRowUsed();
            if (lastRow == null || lastRow.RowNumber() < 2)
            {
                throw new Exception("Excel 文件中没有数据行（至少需要表头和一行数据）。");
            }

            var usersFromExcel = new List<ApplicationUser>();

            for (int row = 2; row <= lastRow.RowNumber(); row++)
            {
                var ntAccount = worksheet.Cell(row, 1).Value.ToString().Trim();
                if (string.IsNullOrEmpty(ntAccount))
                    continue;

                var displayName = worksheet.Cell(row, 2).Value.ToString().Trim();
                var department = worksheet.Cell(row, 3).Value.ToString().Trim();
                var roleRaw = worksheet.Cell(row, 4).Value.ToString().Trim();

                var role = string.IsNullOrEmpty(roleRaw) ? AppRoles.Requester : roleRaw;

                usersFromExcel.Add(new ApplicationUser
                {
                    NtAccount = ntAccount,
                    DisplayName = displayName,
                    Department = department,
                    Role = role
                });
            }

            if (!usersFromExcel.Any())
            {
                throw new Exception("Excel 文件中没有找到有效的用户数据（NT账号不能为空）。");
            }

            var (added, updated) = await UserService.UpsertUsersAsync(usersFromExcel);
            importStatusMessage = $"处理完成！新增 {added} 个用户，更新 {updated} 个用户。";
            await LoadUsers();
        }
        catch (Exception ex)
        {
            isImportError = true;
            importStatusMessage = $"导入失败: {ex.Message}";
        }
    }
}