@page "/adminusers"
@attribute [Authorize(Roles = AppRoles.Admin)]

@using LabBenchManager.Models
@using LabBenchManager.Services
@inject UserService UserService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using ClosedXML.Excel;

<h3>用户权限管理</h3>
<p class="text-muted">为NT账号分配应用程序角色、姓名和部门。</p>

<!-- ==================== 批量操作区域 ==================== -->
<div class="card mb-4">
    <div class="card-header">
        <h5><span class="oi oi-spreadsheet me-2"></span>批量操作</h5>
    </div>
    <div class="card-body">
        @if (!isBatchEditMode)
        {
            <!-- 普通模式：显示导入导出和批量编辑按钮 -->
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="mb-1">支持Excel批量导入/导出，或直接在表格中批量编辑用户信息。</p>
                    <small class="text-muted">Excel导入支持新增和更新用户，以NT账号为匹配依据。</small>
                </div>
                <div class="btn-group">
                    <button class="btn btn-success" @onclick="ExportToExcel" disabled="@(users == null || !users.Any() || isExporting)">
                        @if (isExporting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            <span>导出中...</span>
                        }
                        else
                        {
                            <span class="oi oi-data-transfer-download me-1"></span>
                            <span>导出为Excel</span>
                        }
                    </button>
                    <button class="btn btn-info" onclick="document.getElementById('file-upload').click();">
                        <span class="oi oi-data-transfer-upload me-1"></span>上传Excel更新
                    </button>
                    <button class="btn btn-warning" @onclick="EnterBatchEditMode" disabled="@(users == null || !users.Any())">
                        <span class="oi oi-pencil me-1"></span>进入批量编辑
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- 批量编辑模式：显示状态和保存/退出按钮 -->
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-warning text-dark me-2" style="font-size: 1rem; padding: 0.6rem 1.0rem;">
                        <span class="oi oi-pencil me-1"></span>批量编辑模式
                    </span>
                    @if (modifiedUserIds.Any())
                    {
                        <span class="badge bg-info me-2" style="font-size: 1rem; padding: 0.5rem 0.8rem;">
                            @modifiedUserIds.Count 行待保存
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">请修改需要更新的用户信息</span>
                    }
                </div>
                <div class="btn-group">
                    <button class="btn btn-success" @onclick="SaveAllModified" disabled="@(!modifiedUserIds.Any())">
                        <span class="oi oi-check me-1"></span>保存全部 (@modifiedUserIds.Count)
                    </button>
                    <button class="btn btn-secondary" @onclick="ExitBatchEditMode">
                        <span class="oi oi-x me-1"></span>退出编辑
                    </button>
                </div>
            </div>
        }

        <InputFile id="file-upload" OnChange="ImportFromExcel" class="d-none" accept=".xlsx" />
    </div>

    @if (!string.IsNullOrEmpty(importStatusMessage))
    {
        <div class="card-footer @(isImportError ? "bg-danger" : "bg-success") text-white">
            @importStatusMessage
        </div>
    }
</div>

<!-- ==================== 用户列表 ==================== -->
<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th style="cursor: pointer; user-select: none;" @onclick="() => ToggleSort(SortField.NtAccount)">
                NT账号
                @((MarkupString)GetSortIconHtml(SortField.NtAccount))
                @if (GetSortPriority(SortField.NtAccount) is int priorityNt)
                {
                    <span class="badge bg-dark bg-opacity-75 ms-1" style="font-size: 0.45rem; padding: 0.2rem 0.2rem;">@priorityNt</span>
                }
            </th>
            <th style="cursor: pointer; user-select: none;" @onclick="() => ToggleSort(SortField.DisplayName)">
                显示名称
                @((MarkupString)GetSortIconHtml(SortField.DisplayName))
                @if (GetSortPriority(SortField.DisplayName) is int priorityName)
                {
                    <span class="badge bg-dark bg-opacity-75 ms-1" style="font-size: 0.45rem; padding: 0.2rem 0.2rem;">@priorityName</span>
                }
            </th>
            <th style="cursor: pointer; user-select: none;" @onclick="() => ToggleSort(SortField.Department)">
                部门
                @((MarkupString)GetSortIconHtml(SortField.Department))
                @if (GetSortPriority(SortField.Department) is int priorityDept)
                {
                    <span class="badge bg-dark bg-opacity-75 ms-1" style="font-size: 0.45rem; padding: 0.2rem 0.2rem;">@priorityDept</span>
                }
            </th>
            <th>邮箱</th>
            <th style="cursor: pointer; user-select: none;" @onclick="() => ToggleSort(SortField.Role)">
                角色
                @((MarkupString)GetSortIconHtml(SortField.Role))
                @if (GetSortPriority(SortField.Role) is int priorityRole)
                {
                    <span class="badge bg-dark bg-opacity-75 ms-1" style="font-size: 0.45rem; padding: 0.2rem 0.2rem;">@priorityRole</span>
                }
            </th>
            <th style="width: 150px;">
                操作
                @if (sortColumns.Any())
                {
                    <button class="btn btn-sm btn-dark opacity-75" @onclick="ClearAllSort" title="清除所有排序" style="font-size: 0.5rem;">
                        <span class="oi oi-reload" style="font-size: 0.5rem;"></span>
                    </button>
                }
            </th>
        </tr>
    </thead>
    <tbody>
        @if (users == null)
        {
            <tr><td colspan="6"><em>加载中...</em></td></tr>
        }
        else
        {
            @foreach (var user in users)
            {
                // 🔑 区分批量编辑和单行编辑
                var isBatchEditing = isBatchEditMode && editingUsers.ContainsKey(user.Id);
                var isSingleEditing = editingUserId == user.Id && !isBatchEditMode;
                var isEditing = isBatchEditing || isSingleEditing;

                var isModified = modifiedUserIds.Contains(user.Id);

                // 🔑 获取编辑对象
                ApplicationUser editUser;
                if (isBatchEditing)
                {
                    editUser = editingUsers[user.Id];
                }
                else if (isSingleEditing)
                {
                    editUser = editingUser!;
                }
                else
                {
                    editUser = user;
                }

                <tr class="@(isModified ? "table-warning" : "")">
                    <td>
                        @if (isEditing)
                        {
                            @if (isBatchEditing)
                            {
                                <input type="text" class="form-control form-control-sm"
                                       value="@editUser.NtAccount"
                                       @oninput="@(e => { editUser.NtAccount = e.Value?.ToString() ?? ""; OnFieldChanged(user.Id); })" />
                            }
                            else
                            {
                                <InputText class="form-control form-control-sm" @bind-Value="editUser.NtAccount" />
                            }
                        }
                        else
                        {
                            @user.NtAccount
                        }
                    </td>
                    <td>
                        @if (isEditing)
                        {
                            @if (isBatchEditing)
                            {
                                <input type="text" class="form-control form-control-sm"
                                       value="@editUser.DisplayName"
                                       @oninput="@(e => { editUser.DisplayName = e.Value?.ToString(); OnFieldChanged(user.Id); })" />
                            }
                            else
                            {
                                <InputText class="form-control form-control-sm" @bind-Value="editUser.DisplayName" />
                            }
                        }
                        else
                        {
                            @(user.DisplayName ?? "-")
                        }
                    </td>
                    <td>
                        @if (isEditing)
                        {
                            @if (isBatchEditing)
                            {
                                <input type="text" class="form-control form-control-sm"
                                       value="@editUser.Department"
                                       @oninput="@(e => { editUser.Department = e.Value?.ToString(); OnFieldChanged(user.Id); })" />
                            }
                            else
                            {
                                <InputText class="form-control form-control-sm" @bind-Value="editUser.Department" />
                            }
                        }
                        else
                        {
                            @(user.Department ?? "-")
                        }
                    </td>
                    <td>
                        @if (isEditing)
                        {
                            @if (isBatchEditing)
                            {
                                <input type="email" class="form-control form-control-sm"
                                       value="@editUser.Email"
                                       @oninput="@(e => { editUser.Email = e.Value?.ToString(); OnFieldChanged(user.Id); })" />
                            }
                            else
                            {
                                <InputText class="form-control form-control-sm" @bind-Value="editUser.Email" type="email" />
                            }
                        }
                        else
                        {
                            @(user.Email ?? "-")
                        }
                    </td>
                    <td>
                        @if (isEditing)
                        {
                            @if (isBatchEditing)
                            {
                                <select class="form-select form-select-sm"
                                        value="@editUser.Role"
                                        @onchange="@(e => { editUser.Role = e.Value?.ToString() ?? AppRoles.Requester; OnFieldChanged(user.Id); })">
                                    <option value="@AppRoles.Requester">@AppRoles.Requester</option>
                                    <option value="@AppRoles.TestEngineer">@AppRoles.TestEngineer</option>
                                    <option value="@AppRoles.Admin">@AppRoles.Admin</option>
                                </select>
                            }
                            else
                            {
                                <InputSelect class="form-select form-select-sm" @bind-Value="editUser.Role">
                                    <option value="@AppRoles.Requester">@AppRoles.Requester</option>
                                    <option value="@AppRoles.TestEngineer">@AppRoles.TestEngineer</option>
                                    <option value="@AppRoles.Admin">@AppRoles.Admin</option>
                                </InputSelect>
                            }
                        }
                        else
                        {
                            <span class="badge @GetRoleBadgeClass(user.Role)" style="font-size: 0.9rem; padding: 0.4rem 0.6rem;">@user.Role</span>
                        }
                    </td>
                    <td>
                        @if (isBatchEditing)
                        {
                            @if (isModified)
                            {
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-success" @onclick="() => SaveSingleUser(user.Id)" title="保存">
                                        <span class="oi oi-check"></span>
                                    </button>
                                    <button class="btn btn-outline-secondary" @onclick="() => CancelSingleEdit(user.Id)" title="撤销">
                                        <span class="oi oi-action-undo"></span>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted small">未修改</span>
                            }
                        }
                        else if (isSingleEditing)
                        {
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-success" @onclick="SaveUser" title="保存">
                                    <span class="oi oi-check"></span>
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="CancelEdit" title="取消">
                                    <span class="oi oi-x"></span>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary" @onclick="() => StartEdit(user)"
                                        disabled="@(editingUserId != null || isBatchEditMode)" title="编辑">
                                    <span class="oi oi-pencil"></span>
                                </button>
                                <button class="btn btn-outline-danger" @onclick="() => DeleteUser(user)"
                                        disabled="@(editingUserId != null || isBatchEditMode)" title="删除">
                                    <span class="oi oi-trash"></span>
                                </button>
                            </div>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<hr />

<!-- ==================== 添加新用户 ==================== -->
<h4>添加新用户</h4>
<EditForm Model="newUser" OnValidSubmit="AddNewUser" class="row g-3 align-items-end pb-5">
    <DataAnnotationsValidator />
    <div class="col-md-3">
        <label class="form-label">NT账号 (格式: DOMAIN\user)</label>
        <InputText class="form-control" @bind-Value="newUser.NtAccount" />
        <ValidationMessage For="() => newUser.NtAccount" />
    </div>
    <div class="col-md-2">
        <label class="form-label">显示名称</label>
        <InputText class="form-control" @bind-Value="newUser.DisplayName" />
    </div>
    <div class="col-md-2">
        <label class="form-label">部门</label>
        <InputText class="form-control" @bind-Value="newUser.Department" />
    </div>
    <div class="col-md-2">
        <label class="form-label">邮箱</label>
        <InputText class="form-control" @bind-Value="newUser.Email" type="email" />
        <ValidationMessage For="() => newUser.Email" />
    </div>
    <div class="col-md-2">
        <label class="form-label">角色</label>
        <InputSelect class="form-select" @bind-Value="newUser.Role">
            <option value="@AppRoles.Requester">@AppRoles.Requester</option>
            <option value="@AppRoles.TestEngineer">@AppRoles.TestEngineer</option>
            <option value="@AppRoles.Admin">@AppRoles.Admin</option>
        </InputSelect>
        <ValidationMessage For="() => newUser.Role" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary" disabled="@(editingUserId != null)">
            <span class="oi oi-plus me-1"></span>添加
        </button>
    </div>
</EditForm>

@code {
    private List<ApplicationUser>? users;
    private ApplicationUser newUser = new() { Role = AppRoles.Requester };

    // 编辑状态管理
    private int? editingUserId = null;
    private ApplicationUser? editingUser = null;

    // 排序状态管理
    private List<SortColumn> sortColumns = new();

    private enum SortField { NtAccount, DisplayName, Department, Role }
    private class SortColumn
    {
        public SortField Field { get; set; }
        public bool IsDescending { get; set; }
    }

    // 导出状态
    private bool isExporting = false;

    // Excel 导入/导出状态
    private string? importStatusMessage;
    private bool isImportError = false;

    // 🔑 批量编辑状态管理
    private bool isBatchEditMode = false;
    private Dictionary<int, ApplicationUser> editingUsers = new();
    private Dictionary<int, ApplicationUser> originalUsers = new();
    private HashSet<int> modifiedUserIds = new();

    

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
        // 设置默认排序：先按角色，再按部门
        sortColumns.Add(new SortColumn { Field = SortField.Role, IsDescending = false });
        sortColumns.Add(new SortColumn { Field = SortField.Department, IsDescending = false });

        // 应用默认排序
        if (users != null)
        {
            users = ApplySort(users);
        }
    }

    private async Task LoadUsers()
    {
        users = await UserService.GetAllUsersAsync();
        users = ApplySort(users);

        // 🔑 如果正在批量编辑，重新初始化字典
        if (isBatchEditMode && users != null)
        {
            // 保留已修改的状态
            var currentModified = new HashSet<int>(modifiedUserIds);
            EnterBatchEditMode();

            // 恢复修改标记
            foreach (var id in currentModified)
            {
                if (editingUsers.ContainsKey(id))
                {
                    modifiedUserIds.Add(id);
                }
            }
        }
    }
    private void ToggleSort(SortField field)
    {
        var existing = sortColumns.FirstOrDefault(s => s.Field == field);

        if (existing != null)
        {
            if (!existing.IsDescending)
            {
                // 升序 → 降序
                existing.IsDescending = true;
            }
            else
            {
                // 降序 → 移除排序
                sortColumns.Remove(existing);
            }
        }
        else
        {
            // 未排序 → 升序
            sortColumns.Add(new SortColumn { Field = field, IsDescending = false });
        }

        // 重新排序
        if (users != null)
        {
            users = ApplySort(users);
        }
    }

    // 获取排序图标
    private string GetSortIconHtml(SortField field)
    {
        var sort = sortColumns.FirstOrDefault(s => s.Field == field);

        if (sort == null)
        {
            // 未排序：显示双向箭头，半透明
            return @"<span class=""oi oi-elevator ms-1"" style=""font-size: 0.8rem; opacity: 0.3;""></span>";
        }
        else if (!sort.IsDescending)
        {
            // 升序：显示上箭头
            return @"<span class=""oi oi-arrow-thick-top ms-1"" style=""font-size: 0.8rem;""></span>";
        }
        else
        {
            // 降序：显示下箭头
            return @"<span class=""oi oi-arrow-thick-bottom ms-1"" style=""font-size: 0.8rem;""></span>";
        }
    }
    private int? GetSortPriority(SortField field)
    {
        var index = sortColumns.FindIndex(s => s.Field == field);
        return index >= 0 ? index + 1 : null;
    }


    // 应用排序
    private List<ApplicationUser> ApplySort(List<ApplicationUser> sourceUsers)
    {
        if (!sortColumns.Any())
            return sourceUsers;

        IOrderedEnumerable<ApplicationUser>? orderedUsers = null;

        for (int i = 0; i < sortColumns.Count; i++)
        {
            var sortCol = sortColumns[i];

            if (i == 0)
            {
                // 第一级排序
                orderedUsers = sortCol.Field switch
                {
                    SortField.NtAccount => sortCol.IsDescending
                        ? sourceUsers.OrderByDescending(u => u.NtAccount)
                        : sourceUsers.OrderBy(u => u.NtAccount),
                    SortField.DisplayName => sortCol.IsDescending
                        ? sourceUsers.OrderByDescending(u => u.DisplayName)
                        : sourceUsers.OrderBy(u => u.DisplayName),
                    SortField.Department => sortCol.IsDescending
                        ? sourceUsers.OrderByDescending(u => u.Department)
                        : sourceUsers.OrderBy(u => u.Department),
                    SortField.Role => sortCol.IsDescending
                        ? sourceUsers.OrderByDescending(u => GetRoleOrder(u.Role))
                        : sourceUsers.OrderBy(u => GetRoleOrder(u.Role)),
                    _ => sourceUsers.OrderBy(u => u.Id)
                };
            }
            else
            {
                // 后续级别排序
                orderedUsers = sortCol.Field switch
                {
                    SortField.NtAccount => sortCol.IsDescending
                        ? orderedUsers!.ThenByDescending(u => u.NtAccount)
                        : orderedUsers!.ThenBy(u => u.NtAccount),
                    SortField.DisplayName => sortCol.IsDescending
                        ? orderedUsers!.ThenByDescending(u => u.DisplayName)
                        : orderedUsers!.ThenBy(u => u.DisplayName),
                    SortField.Department => sortCol.IsDescending
                        ? orderedUsers!.ThenByDescending(u => u.Department)
                        : orderedUsers!.ThenBy(u => u.Department),
                    SortField.Role => sortCol.IsDescending
                        ? orderedUsers!.ThenByDescending(u => GetRoleOrder(u.Role))
                        : orderedUsers!.ThenBy(u => GetRoleOrder(u.Role)),
                    _ => orderedUsers
                };
            }
        }

        return orderedUsers?.ToList() ?? sourceUsers;
    }

    // 定义角色排序优先级
    private int GetRoleOrder(string role) => role switch
    {
        AppRoles.Admin => 1,
        AppRoles.TestEngineer => 2,
        AppRoles.Requester => 3,
        _ => 99
    };


    // 清除某列排序
    private void ClearSort(SortField field)
    {
        sortColumns.RemoveAll(s => s.Field == field);
        if (users != null)
        {
            users = ApplySort(users);
        }
    }

    // 清除所有排序
    private void ClearAllSort()
    {
        sortColumns.Clear();
        if (users != null)
        {
            users = ApplySort(users);
        }
    }

    // 获取排序图标
    private string GetSortIcon(SortField field)
    {
        var sort = sortColumns.FirstOrDefault(s => s.Field == field);
        if (sort == null) return "oi-elevator"; // 未排序

        return sort.IsDescending ? "oi-arrow-thick-bottom" : "oi-arrow-thick-top";
    }



    // 开始编辑
    private void StartEdit(ApplicationUser user)
    {
        editingUserId = user.Id;
        // 创建副本进行编辑
        editingUser = new ApplicationUser
        {
            Id = user.Id,
            NtAccount = user.NtAccount,
            DisplayName = user.DisplayName,
            Department = user.Department,
            Email = user.Email,
            Role = user.Role
        };
    }

    // 🔑 保存编辑
    private async Task SaveUser()
    {
        if (editingUser != null)
        {
            await UserService.UpdateUserAsync(editingUser);
            await LoadUsers();
            editingUserId = null;
            editingUser = null;
        }
    }

    // 🔑 取消编辑
    private void CancelEdit()
    {
        editingUserId = null;
        editingUser = null;
    }

    private async Task AddNewUser()
    {
        await UserService.AddUserAsync(newUser);
        newUser = new() { Role = AppRoles.Requester };
        await LoadUsers();
    }

    private async Task DeleteUser(ApplicationUser User)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"确定要删除用户 '{User.NtAccount}' 吗？");
        if (confirmed)
        {
            await UserService.DeleteUserAsync(User.Id);
            await LoadUsers();
        }
    }

    // 🔑 角色徽章样式
    private string GetRoleBadgeClass(string role) => role switch
    {
        AppRoles.Admin => "bg-danger",
        AppRoles.TestEngineer => "bg-primary",
        AppRoles.Requester => "bg-secondary",
        _ => "bg-secondary"
    };

    private async Task ExportToExcel()
    {
        if (users == null || !users.Any()) return;

        isExporting = true;
        StateHasChanged(); // 立即更新UI
        try
        {
            await Task.Delay(1);
            using var workbook = new XLWorkbook();
            var worksheet = workbook.Worksheets.Add("Users");

            worksheet.Cell(1, 1).Value = "NtAccount";
            worksheet.Cell(1, 2).Value = "DisplayName";
            worksheet.Cell(1, 3).Value = "Department";
            worksheet.Cell(1, 4).Value = "Email";
            worksheet.Cell(1, 5).Value = "Role";

            for (int i = 0; i < users.Count; i++)
            {
                worksheet.Cell(i + 2, 1).Value = users[i].NtAccount;
                worksheet.Cell(i + 2, 2).Value = users[i].DisplayName;
                worksheet.Cell(i + 2, 3).Value = users[i].Department;
                worksheet.Cell(i + 2, 4).Value = users[i].Email;
                worksheet.Cell(i + 2, 5).Value = users[i].Role;
            }

            worksheet.Columns().AdjustToContents();

            using var ms = new MemoryStream();
            workbook.SaveAs(ms);
            var fileBytes = ms.ToArray();

            var fileName = $"Users_Export_{DateTime.Now:yyyyMMdd}.xlsx";
            await JSRuntime.InvokeVoidAsync("saveAsFile", fileName, Convert.ToBase64String(fileBytes));
        }
        finally
        {
            isExporting = false;
        }

        
    }

    private async Task ImportFromExcel(InputFileChangeEventArgs e)
    {
        isImportError = false;
        importStatusMessage = "正在处理文件...";

        try
        {
            var file = e.File;
            if (file == null)
            {
                throw new Exception("未选择文件。");
            }

            using var originalStream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            using var memoryStream = new MemoryStream();
            await originalStream.CopyToAsync(memoryStream);
            memoryStream.Position = 0;

            using var workbook = new XLWorkbook(memoryStream);
            var worksheet = workbook.Worksheet(1);
            if (worksheet == null)
            {
                throw new Exception("Excel 文件中找不到工作表。");
            }

            var lastRow = worksheet.LastRowUsed();
            if (lastRow == null || lastRow.RowNumber() < 2)
            {
                throw new Exception("Excel 文件中没有数据行（至少需要表头和一行数据）。");
            }

            var usersFromExcel = new List<ApplicationUser>();

            for (int row = 2; row <= lastRow.RowNumber(); row++)
            {
                var ntAccount = worksheet.Cell(row, 1).Value.ToString().Trim();
                if (string.IsNullOrEmpty(ntAccount))
                    continue;

                var displayName = worksheet.Cell(row, 2).Value.ToString().Trim();
                var department = worksheet.Cell(row, 3).Value.ToString().Trim();
                var email = worksheet.Cell(row, 4).Value.ToString().Trim();
                var roleRaw = worksheet.Cell(row, 5).Value.ToString().Trim();

                var role = string.IsNullOrEmpty(roleRaw) ? AppRoles.Requester : roleRaw;

                usersFromExcel.Add(new ApplicationUser
                {
                    NtAccount = ntAccount,
                    DisplayName = displayName,
                    Department = department,
                    Email = email,
                    Role = role
                });
            }

            if (!usersFromExcel.Any())
            {
                throw new Exception("Excel 文件中没有找到有效的用户数据（NT账号不能为空）。");
            }

            var (added, updated) = await UserService.UpsertUsersAsync(usersFromExcel);
            importStatusMessage = $"处理完成！新增 {added} 个用户，更新 {updated} 个用户。";
            await LoadUsers();
        }
        catch (Exception ex)
        {
            isImportError = true;
            importStatusMessage = $"导入失败: {ex.Message}";
        }
    }

    // 进入批量编辑模式
    private void EnterBatchEditMode()
    {
        if (users == null || !users.Any()) return;

        isBatchEditMode = true;
        editingUsers.Clear();
        originalUsers.Clear();
        modifiedUserIds.Clear();

        foreach (var user in users)
        {
            var editCopy = new ApplicationUser
            {
                Id = user.Id,
                NtAccount = user.NtAccount ?? "",
                DisplayName = user.DisplayName ?? "",
                Department = user.Department ?? "",
                Email = user.Email ?? "",
                Role = user.Role ?? AppRoles.Requester
            };

            var originalCopy = new ApplicationUser
            {
                Id = user.Id,
                NtAccount = user.NtAccount ?? "",
                DisplayName = user.DisplayName ?? "",
                Department = user.Department ?? "",
                Email = user.Email ?? "",
                Role = user.Role ?? AppRoles.Requester
            };

            editingUsers[user.Id] = editCopy;
            originalUsers[user.Id] = originalCopy;
        }
    }

    // 退出批量编辑模式
    private void ExitBatchEditMode()
    {
        isBatchEditMode = false;
        editingUsers.Clear();
        originalUsers.Clear();
        modifiedUserIds.Clear();
    }

    // 检测字段变化
    private void OnFieldChanged(int userId)
    {
        if (!editingUsers.ContainsKey(userId) || !originalUsers.ContainsKey(userId))
            return;

        var edited = editingUsers[userId];
        var original = originalUsers[userId];

        bool hasChanges = edited.NtAccount != original.NtAccount
                       || edited.DisplayName != original.DisplayName
                       || edited.Department != original.Department
                       || edited.Email != original.Email
                       || edited.Role != original.Role;

        if (hasChanges)
            modifiedUserIds.Add(userId);
        else
            modifiedUserIds.Remove(userId);
    }

    // 保存单个用户
    private async Task SaveSingleUser(int userId)
    {
        if (!editingUsers.ContainsKey(userId)) return;

        var userToSave = editingUsers[userId];
        await UserService.UpdateUserAsync(userToSave);

        // 🔑 直接更新内存中的用户，不重新加载
        var userInList = users?.FirstOrDefault(u => u.Id == userId);
        if (userInList != null)
        {
            userInList.NtAccount = userToSave.NtAccount;
            userInList.DisplayName = userToSave.DisplayName;
            userInList.Department = userToSave.Department;
            userInList.Email = userToSave.Email;
            userInList.Role = userToSave.Role;
        }

        // 更新原始副本
        originalUsers[userId] = new ApplicationUser
        {
            Id = userToSave.Id,
            NtAccount = userToSave.NtAccount,
            DisplayName = userToSave.DisplayName,
            Department = userToSave.Department,
            Email = userToSave.Email,
            Role = userToSave.Role
        };

        modifiedUserIds.Remove(userId);
    }

    // 撤销单个用户修改
    private void CancelSingleEdit(int userId)
    {
        if (!originalUsers.ContainsKey(userId)) return;

        var original = originalUsers[userId];
        editingUsers[userId] = new ApplicationUser
        {
            Id = original.Id,
            NtAccount = original.NtAccount,
            DisplayName = original.DisplayName,
            Department = original.Department,
            Email = original.Email,
            Role = original.Role
        };

        modifiedUserIds.Remove(userId);
    }

    // 保存所有修改
    private async Task SaveAllModified()
    {
        foreach (var userId in modifiedUserIds.ToList())
        {
            await SaveSingleUser(userId);
        }
    }
