@page "/benches"

@using LabBenchManager.Services
@using LabBenchManager.Models
@inject BenchService BenchSvc
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment Env

<PageTitle>设备管理</PageTitle>

<h3>设备管理 (Benches)</h3>
<p class="text-muted">在这里添加、编辑或删除测试台设备。</p>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowAddModal">
        <span class="oi oi-plus" aria-hidden="true"></span> 添加新设备
    </button>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>图片</th>
                <th>名称 (Item)</th>
                <th>设备/资产编号</th>
                <th>位置</th>
                <th>测试类型</th>
                <th>测试对象</th>
                <th>状态</th>
                <th style="width: 150px;">操作</th>
            </tr>
        </thead>
        <tbody>
            @if (benchList == null)
            {
                <tr><td colspan="6"><em>加载中...</em></td></tr>
            }
            else
            {
                @foreach (var bench in benchList)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(bench.PictureUrl))
                            {
                                <img src="@bench.PictureUrl" class="img-thumbnail" style="width: 100px; height: auto;" alt="@bench.Name" />
                            }
                            else
                            {
                                <span class="text-muted">无图片</span>
                            }
                        </td>
                        <td>@bench.Name</td>
                        <td>@bench.EquipmentAssetNo</td>
                        <td>@bench.Location</td>
                        <td>@bench.TestType</td>
                        <td>@bench.TestObject</td>
                        <td>@bench.Status.ToString()</td>
                        <td>
                            <button class="btn btn-sm btn-secondary" @onclick="() => EditBench(bench)">编辑</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteBench(bench.Id)">删除</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@* 一个模态框用于添加/编辑，已更新以包含所有字段 *@
@if (showModal)
{
    <div class="modal fade show" style="display:block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingBench.Id == 0 ? "添加新设备" : "编辑设备")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@editingBench" OnValidSubmit="HandleSave">
                        <DataAnnotationsValidator />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">设备名称</label>
                                <InputText class="form-control" @bind-Value="editingBench.Name" />
                                <ValidationMessage For="@(() => editingBench.Name)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">设备/资产编号</label>
                                <InputText class="form-control" @bind-Value="editingBench.EquipmentAssetNo" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">位置</label>
                            <InputText class="form-control" @bind-Value="editingBench.Location" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">测试类型</label>
                                <InputText class="form-control" @bind-Value="editingBench.TestType" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">测试对象</label>
                                <InputText class="form-control" @bind-Value="editingBench.TestObject" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">数量</label>
                                <InputNumber class="form-control" @bind-Value="editingBench.Quantity" />
                            </div>
                            <div class="col-md-8 mb-3">
                                <label class="form-label">工作时间标准</label>
                                <InputText class="form-control" @bind-Value="editingBench.WorkingHoursNorm" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">基本性能</label>
                            <InputTextArea class="form-control" @bind-Value="editingBench.BasicPerformance" rows="3" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">图片链接 (URL)</label>
                            <InputText class="form-control" @bind-Value="editingBench.PictureUrl" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">设备图片</label>
                            <InputFile OnChange="LoadFile" class="form-control" accept="image/png, image/jpeg, image/gif" />
                            @if (!string.IsNullOrEmpty(editingBench.PictureUrl))
                            {
                                <div class="mt-2">
                                    <small>当前图片:</small><br />
                                    <img src="@editingBench.PictureUrl" style="max-width: 200px; max-height: 200px;" />
                                </div>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label">状态</label>
                            <InputSelect class="form-select" @bind-Value="editingBench.Status">
                                @foreach (var status in Enum.GetValues<BenchStatus>())
                                {
                                    <option value="@status">@status.ToString()</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">取消</button>
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}


@code {
    private List<Bench>? benchList;
    private bool showModal = false;
    private Bench editingBench = new();
    private IBrowserFile? selectedFile; // 用于存储用户选择的文件

    protected override async Task OnInitializedAsync()
    {
        await LoadBenches();
    }

    private async Task LoadBenches()
    {
        benchList = await BenchSvc.GetAllAsync();
    }

    // 当用户在 InputFile 中选择文件时，此方法会被调用
    private void LoadFile(InputFileChangeEventArgs e)
    {
        // 我们只处理单个文件上传
        selectedFile = e.File;
    }

    private void ShowAddModal()
    {
        editingBench = new Bench { Quantity = 1 };
        selectedFile = null; // 清空上次选择的文件
        showModal = true;
    }

    private void EditBench(Bench benchToEdit)
    {
        editingBench = new Bench
        {
            Id = benchToEdit.Id,
            Name = benchToEdit.Name,
            EquipmentAssetNo = benchToEdit.EquipmentAssetNo,
            Location = benchToEdit.Location,
            TestType = benchToEdit.TestType,
            TestObject = benchToEdit.TestObject,
            Quantity = benchToEdit.Quantity,
            WorkingHoursNorm = benchToEdit.WorkingHoursNorm,
            BasicPerformance = benchToEdit.BasicPerformance,
            PictureUrl = benchToEdit.PictureUrl,
            Status = benchToEdit.Status
        };
        selectedFile = null; // 清空上次选择的文件
        showModal = true;
    }

    // 更新后的保存逻辑
    private async Task HandleSave()
    {
        // 检查是否有新文件被上传
        if (selectedFile != null)
        {
            // 1. 定义存储路径
            var uploadPath = Path.Combine(Env.WebRootPath, "images", "benches");
            if (!Directory.Exists(uploadPath))
            {
                Directory.CreateDirectory(uploadPath);
            }

            // 2. 为了避免文件名冲突，生成一个唯一的文件名
            var uniqueFileName = $"{Guid.NewGuid()}{Path.GetExtension(selectedFile.Name)}";
            var physicalPath = Path.Combine(uploadPath, uniqueFileName);

            // 3. 将文件流写入服务器磁盘
            // 设定一个合理的文件大小限制，例如5MB
            await using var fs = new FileStream(physicalPath, FileMode.Create);
            await selectedFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).CopyToAsync(fs);

            // 4. 更新模型中的 PictureUrl 为Web可访问的相对路径
            editingBench.PictureUrl = $"/images/benches/{uniqueFileName}";
        }

        if (editingBench.Id == 0)
        {
            await BenchSvc.AddAsync(editingBench);
        }
        else
        {
            await BenchSvc.UpdateAsync(editingBench);
        }

        showModal = false;
        await LoadBenches();
    }

    // 更新后的删除逻辑
    private async Task DeleteBench(int id)
    {
        // 1. 在删除数据库记录前，先获取实体信息
        var benchToDelete = await BenchSvc.GetByIdAsync(id);
        if (benchToDelete == null) return;

        // 2. 尝试删除关联的图片文件
        if (!string.IsNullOrEmpty(benchToDelete.PictureUrl))
        {
            try
            {
                var filePath = Path.Combine(Env.WebRootPath, benchToDelete.PictureUrl.TrimStart('/'));
                if (File.Exists(filePath))
                {
                    File.Delete(filePath);
                }
            }
            catch (Exception ex)
            {
                // 记录日志，但不阻止数据库记录的删除
                Console.WriteLine($"Error deleting file: {ex.Message}");
            }
        }

        // 3. 删除数据库记录
        await BenchSvc.RemoveAsync(id);
        await LoadBenches();
    }

    private void CloseModal()
    {
        showModal = false;
    }
}