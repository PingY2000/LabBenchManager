@using Microsoft.AspNetCore.Components.Web
@namespace LabBenchManager.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="LabBenchManager.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    <!-- ↓↓↓ ADD THESE SCRIPTS HERE ↓↓↓ -->
    <!-- Chart.js and SheetJS CDNs for chart rendering and Excel export -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>

    <script>
        function exportTableToExcel(fileName, payload) {
            // 🔥 修复：第一个检查也要兼容大小写
            if (!payload || !(payload.Data || payload.data) || !(payload.Headers || payload.headers)) {
                console.error("Invalid payload for Excel export.", payload);
                return;
            }

            // 🔥 统一获取属性（兼容大小写）
            const headers = payload.Headers || payload.headers;
            const data = payload.Data || payload.data;

            if (!data || !headers) {
                console.error("Invalid payload for Excel export: 'data' or 'headers' property is missing.");
                return;
            }

            // Create a new worksheet just with the headers first
            const ws = XLSX.utils.aoa_to_sheet([headers]);

            // Map the data rows to an array of arrays, respecting the header order
            const dataRows = data.map(row => {
                return headers.map(header => {
                    // Get value by header, default to empty string if not found
                    return row[header] !== undefined && row[header] !== null ? row[header] : "";
                });
            });

            // Append data to the worksheet starting from the second row (A2)
            XLSX.utils.sheet_add_aoa(ws, dataRows, { origin: "A2" });

            // 🔥 紧凑型列宽设置
            const columnWidths = headers.map((header, index) => {
                // 为日期列（1-31）设置固定的小宽度
                if (!isNaN(parseInt(header)) && parseInt(header) >= 1 && parseInt(header) <= 31) {
                    return { wch: 4 }; // 日期列非常窄
                }

                // 为"年份"和"月份"列设置固定宽度
                if (header === "年份") {
                    return { wch: 6 };
                }
                if (header === "月份") {
                    return { wch: 8 };
                }

                // 为"总计"列设置固定宽度
                if (header.includes("总计")) {
                    return { wch: 8 };
                }

                // 其他列自动计算，但更紧凑
                let maxWidth = header.length;
                data.forEach(row => {
                    const value = row[header];
                    if (value && value.toString().length > maxWidth) {
                        maxWidth = value.toString().length;
                    }
                });
                // 🔥 减少额外空间，最大宽度限制为 30
                return { wch: Math.min(maxWidth + 1, 30) };
            });
            ws['!cols'] = columnWidths;

            // 🔥 新增：设置紧凑的行高
            const rowHeights = [];
            // 表头行稍高一点
            rowHeights.push({ hpx: 20 });
            // 数据行设置较小的行高
            for (let i = 0; i < dataRows.length; i++) {
                rowHeights.push({ hpx: 16 }); // 16像素高度，非常紧凑
            }
            ws['!rows'] = rowHeights;

            // Create a new workbook and append the worksheet
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, "Usage Analysis");

            // Write the workbook and trigger download
            XLSX.writeFile(wb, fileName);
        }

        // Blazor calls this function to render the bar chart
        function renderBarChart(canvasId, chartData) {
            const canvas = document.getElementById(canvasId);
            if (!canvas) return;

            // If a chart already exists on this canvas, destroy it first
            // to prevent memory leaks and rendering issues on updates.
            const existingChart = Chart.getChart(canvas);
            if (existingChart) {
                existingChart.destroy();
            }

            const ctx = canvas.getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: chartData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: '年度使用天数对比'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '使用天数'
                            }
                        }
                    }
                }
            });
        }
    </script>
    <!-- ↑↑↑ SCRIPTS END HERE ↑↑↑ -->

</body>
</html>