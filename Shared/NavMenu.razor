@*Shared/NavMenu.razor*@
@using LabBenchManager.Services
@using LabBenchManager.Models
@inject BenchService BenchSvc

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">测试台管理平台</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                <span class="oi oi-dashboard" aria-hidden="true"></span> 设备状态
            </NavLink>
        </div>

        @* 排产日历 - 可展开菜单 *@
        <div class="nav-item px-3">
            <div class="nav-link expandable" @onclick="ToggleScheduleMenu" @onclick:stopPropagation="true">
                <span class="oi oi-calendar" aria-hidden="true"></span> 排产日历
                <span class="oi @(scheduleMenuExpanded ? "oi-chevron-bottom" : "oi-chevron-right") chevron-icon ms-auto"></span>
            </div>

            @if (scheduleMenuExpanded)
            {
                <div class="submenu">
                    @if (isLoading)
                    {
                        <div class="submenu-item loading-item">
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <em class="small">加载中...</em>
                        </div>
                    }
                    else if (benches == null || benches.Count == 0)
                    {
                        <div class="submenu-item empty-item">
                            <em class="small text-muted">暂无设备</em>
                        </div>
                    }
                    else
                    {
                        @foreach (var bench in benches)
                        {
                            <NavLink class="nav-link submenu-item" href="@($"schedule/{bench.Id}")" Match="NavLinkMatch.All">
                                <span class="oi oi-wrench me-2"></span>
                                <span class="bench-name">@bench.Name</span>
                                @if (!string.IsNullOrEmpty(bench.EquipmentNo))
                                {
                                    <small class="text-muted ms-1">(#@bench.EquipmentNo)</small>
                                }
                            </NavLink>
                        }
                    }
                </div>
            }
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="request" Match="NavLinkMatch.All">
                <span class="oi oi-pencil" aria-hidden="true"></span> 申请测试
            </NavLink>
        </div>

        @* 申请管理: 只有 TestEngineer, Admin 能看到 *@
        <AuthorizeView Roles="TestEngineer, Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="assignments" Match="NavLinkMatch.All">
                    <span class="oi oi-spreadsheet" aria-hidden="true"></span> 申请管理
                </NavLink>
            </div>
        </AuthorizeView>

        @* 设备管理: 只有 TestEngineer, Admin 能看到 *@
        <AuthorizeView Roles="TestEngineer, Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="benches" Match="NavLinkMatch.All">
                    <span class="oi oi-cog" aria-hidden="true"></span> 设备管理
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="adminusers" Match="NavLinkMatch.All">
                    <span class="oi oi-people" aria-hidden="true"></span> 用户管理
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

<style>
    /* 可展开的菜单项 */
    .nav-link.expandable {
        cursor: pointer;
        user-select: none;
    }

    /* 展开/折叠图标动画 */
    .chevron-icon {
        transition: transform 0.2s;
        font-size: 0.7em !important;
        width: auto !important;
    }

    /* 子菜单容器 */
    .submenu {
        padding: 0 !important;
        background-color: rgba(0, 0, 0, 0.2) !important;
        margin: 0.25rem 0.5rem !important;
        border-radius: 0.25rem;
        overflow: hidden;
    }

    /* 子菜单项样式 */
    .submenu-item {
        padding: 0.6rem 1rem !important;
        font-size: 0.85em !important;
        height: auto !important;
        line-height: 1.4 !important;
        color: #d7d7d7 !important;
        display: flex !important;
        align-items: center;
        border-left: 3px solid transparent;
        transition: all 0.2s;
    }

        .submenu-item .oi {
            width: 1.2rem !important;
            font-size: 0.9em !important;
        }

        .submenu-item:hover {
            background-color: rgba(255, 255, 255, 0.15) !important;
            color: white !important;
        }

        .submenu-item.active {
            background-color: rgba(255, 255, 255, 0.25) !important;
            color: white !important;
            border-left-color: #ffffff !important;
        }

    /* 加载和空状态样式 */
    .loading-item,
    .empty-item {
        cursor: default !important;
        padding: 0.8rem 1rem !important;
    }

        .loading-item:hover,
        .empty-item:hover {
            background-color: transparent !important;
        }

    /* 加载动画 */
    .spinner-border-sm {
        width: 0.8rem;
        height: 0.8rem;
        border-width: 0.1em;
    }
</style>

@code {
    private bool collapseNavMenu = true;
    private bool scheduleMenuExpanded = false;
    private List<Bench>? benches;
    private bool isLoading = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task ToggleScheduleMenu()
    {
        scheduleMenuExpanded = !scheduleMenuExpanded;

        // 延迟加载：只在第一次展开时加载数据
        if (scheduleMenuExpanded && benches == null && !isLoading)
        {
            await LoadBenches();
        }
    }

    private async Task LoadBenches()
    {
        isLoading = true;
        try
        {
            benches = await BenchSvc.GetAllAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading benches: {ex.Message}");
            benches = new List<Bench>();
        }
        finally
        {
            isLoading = false;
        }
    }
}


