@* Components/PlanColumn.razor *@

@using LabBenchManager.Models

@if (plansForThisStatus.Any())
{
    <div class="card shadow-sm">
        <!-- 卡片头部 (类似申请栏风格) -->
        <div class="card-header @GetHeaderClass() @(IsCollapsible ? "" : "")">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0">@Title (@plansForThisStatus.Count)</h6>
                @if (IsCollapsible)
                {
                    <span class="oi @(isCollapsed ? "oi-chevron-bottom" : "oi-chevron-top") collapse-icon"
                          @onclick="ToggleCollapse"
                          style="cursor: pointer;"></span>
                }
            </div>
        </div>

        @if (!isCollapsed)
        {
            <div class="list-group list-group-flush">
                @foreach (var plan in plansForThisStatus)
                {
                    <div class="list-group-item plan-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <!-- 左侧信息区 -->
                            <div class="flex-grow-1" @onclick="() => OnEdit.InvokeAsync(plan)" style="cursor: pointer;">
                                <div class="fw-bold mb-1">@plan.ProjectName</div>
                                <div class="small text-muted">
                                    <span class="oi oi-calendar me-1"></span>
                                    @DateUtils.FormatDateListWithRanges(plan.ScheduledDateList)
                                </div>
                                @if (!string.IsNullOrEmpty(plan.AssignedTo))
                                {
                                    <div class="small text-muted mt-1">
                                        <span class="oi oi-person me-1"></span>@plan.AssignedTo
                                    </div>
                                }
                            </div>

                            <!-- 右侧按钮组 -->
                            <div class="btn-group btn-group-sm ms-2" @onclick:stopPropagation="true">
                                <button class="btn btn-outline-primary btn-sm"
                                        @onclick="() => OnEdit.InvokeAsync(plan)"
                                        title="编辑">
                                    <span class="oi oi-pencil"></span>
                                </button>
                                <button class="btn btn-outline-danger btn-sm"
                                        @onclick="() => OnDelete.InvokeAsync(plan)"
                                        title="删除">
                                    <span class="oi oi-trash"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}

@code {
    private List<TestPlan> plansForThisStatus = new();
    private bool isCollapsed;

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public TestPlanStatus Status { get; set; }

    [Parameter]
    public List<TestPlan>? Plans { get; set; }

    [Parameter]
    public bool IsInitiallyCollapsed { get; set; } = false;

    [Parameter]
    public bool IsCollapsible { get; set; } = true;

    [Parameter]
    public EventCallback<TestPlan> OnEdit { get; set; }

    [Parameter]
    public EventCallback<TestPlan> OnDelete { get; set; }

    protected override void OnInitialized()
    {
        isCollapsed = IsInitiallyCollapsed;
    }

    protected override void OnParametersSet()
    {
        if (Plans != null)
        {
            plansForThisStatus = Plans.Where(p => p.Status == Status)
                                      .OrderBy(p => p.ScheduledDateList.FirstOrDefault())
                                      .ToList();
        }
    }

    private void ToggleCollapse()
    {
        if (IsCollapsible)
        {
            isCollapsed = !isCollapsed;
        }
    }

    private string GetHeaderClass()
    {
        return Status switch
        {
            TestPlanStatus.初步规划 => "bg-secondary text-white",
            TestPlanStatus.确定计划 => "bg-primary text-white",
            TestPlanStatus.已完成 => "bg-success text-white",
            _ => "bg-light text-dark"
        };
    }
}